@model RegistrationModel
@{
	Layout = null;
}

<html>
	<head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	</head>
	<body>

    @if (ViewBag.RegistrationSuccess != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success!</strong> @ViewBag.RegistrationSuccess
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (ViewBag.RegistrationError != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>Error!</strong> @ViewBag.RegistrationError
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class=" d-flex align-items-center justify-content-center vh-100" style="flex-direction:column">
        @using (@Html.BeginForm())
        {
            <div style="text-align:center">
                <h3>Registration</h3>
                <h6>We do not sell/share your information to any third party companies</h6>
                <div style="text-align:center">
                    @Html.Label("Username")
                    @Html.TextBoxFor(Model => Model.Username, new { @maxlength = "50", @class = "form-control", style = "margin:auto;", required = "required" })
                    @Html.ValidationMessageFor(m => m.Username, null, new { @class = "text-danger" })
                </div>
                <div style="text-align:center">
                    @Html.Label("Password")
                    @Html.PasswordFor(Model => Model.UserPassword, new { @class = "form-control", style = "margin:auto;", required = "required" })
                    @Html.ValidationMessageFor(m => m.UserPassword, null, new { @class = "text-danger" })
                </div>
                <div style="text-align:center">
                    @Html.Label("Repeat Password")
                    @Html.PasswordFor(Model => Model.RepeatPassword, new { @class = "form-control", style = "margin:auto;", required = "required" })
                    @Html.ValidationMessageFor(m => m.RepeatPassword, null, new { @class = "text-danger" })

                </div>
                <div style="text-align:center">
                    @Html.Label("Name")
                    @Html.TextBoxFor(Model => Model.Name, new { @maxlength = "50", @class = "form-control", style = "margin:auto;", required = "required" })
                    @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })

                </div>
                <div style="text-align:center">
                    @Html.Label("Email")
                    @Html.TextBoxFor(Model => Model.Email, new { @maxlength = "100", @class = "form-control", style = "margin:auto;", required = "required" })
                    @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })

                </div>
                <div style="text-align:center">
                    <button class="btn btn-dark btn-block" style="margin-top:10px">Register</button>
                </div>
            </div>

        }
    </div>
	</body>
</html>